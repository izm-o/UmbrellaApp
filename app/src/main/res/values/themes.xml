        <item name="colorPrimary">@color/light_blue</item><!-- デフォルト purple_500 -->
        <item name="colorPrimaryVariant">@color/light_blue</item><!-- デフォルト purple_700 -->
        <item name="colorOnPrimary">@color/white</item>
